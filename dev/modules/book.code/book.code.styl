/*! [BOOK CODE] */

/* Variables */
bookCodeColor=#34581e
bookCodeColorRelevant=#b45f06
bookCodeColorComment=#747474

/* Styles */
.book-code
  position relative
  margin-bottom 30px
  padding 15px 0 15px;
  font bold 13px 'Courier New'
  color bookCodeColor
  border-bottom #ffd966 solid 2px

  &-relevant
    font @font
    color bookCodeColorRelevant

  &-comment
    font @font
    color bookCodeColorComment

  &-before
    position absolute
    top 0
    left 0
    width 100%
    height 25px
    background-linear-gradient(#fff1bb, #ffd751)

  &-wrapper
    position relative
    padding-top 25px
